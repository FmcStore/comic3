{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    { "source": "/series/(.*)", "destination": "/" },
    { "source": "/chapter/(.*)", "destination": "/" },
    { "source": "/ongoing", "destination": "/" },
    { "source": "/completed", "destination": "/" },
    { "source": "/bookmarks", "destination": "/" },
    { "source": "/history", "destination": "/" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        }
      ]
    }
  ]
}
