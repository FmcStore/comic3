{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDir": "dist"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    { "source": "/series/:slug", "destination": "/index.html" },
    { "source": "/chapter/:slug", "destination": "/index.html" },
    { "source": "/ongoing", "destination": "/index.html" },
    { "source": "/completed", "destination": "/index.html" },
    { "source": "/bookmarks", "destination": "/index.html" },
    { "source": "/history", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Service-Worker-Allowed", "value": "/" },
        { "key": "Cache-Control", "value": "public, max-age=3600" }
      ]
    }
  ]
}
